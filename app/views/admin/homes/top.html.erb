<div class="container-fruid p-5 m-5">
  <div class="row mb-5">
    <h4 class="offset-sm-2">ユーザー一覧</h4>
  </div>
  <div class="justify-content-center">
    <table class="table offset-sm-2 col-sm-8 table-hover text-dark">
      <thead class="thead-light">
        <tr>
          <th>ユーザーID</th>
          <th>ユーザーネーム</th>
          <th>ステータス</th>
          <th>通報された投稿数</th>
          <th>通報されたコメント数</th>
        </tr>
      </thead>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to admin_user_path(user), class: "text-decoration-none text-dark" do %>
              <%= user.user_id %>
            <% end %>
          </td>
          <td>
            <%= link_to admin_user_path(user), class: "text-decoration-none text-dark" do %>
              <%= user.username %></td>
            <% end %>
          <td><%= user.status_i18n %></td>
          <td><%= user.number_of_reported_posts(user) %></td>
          <td><%= user.number_of_reported_comments(user) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
